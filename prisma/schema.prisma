generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Customers {
  customerId  String         @id @default(uuid())
  firstname   String
  lastname    String
  email       String         @unique
  password    String
  country     String
  speciality  SpecialityEnum
  phone       String?
  institution String?
}

enum SpecialityEnum {
  HIP
  KNEE
  SHOULDER
  ELBOW
  FOOT_AND_ANKLE
  WRIST
  FINGER_JOINTS
  UPPER_LIMB
  LOWER_LIMB
}
